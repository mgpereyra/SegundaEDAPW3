@model DAL.GolesPorJugadorEquipo
@{
    ViewBag.Title = "Alta de Goles Jugador";
    List<DAL.Jugador> jugadores = ViewBag.Jugadores as List<DAL.Jugador>;
    IEnumerable<SelectListItem> jugadoresItems = jugadores.Select(o => new SelectListItem()
                                                                    {
                                                                        Text = o.nombre,
                                                                        Value = o.idJugador.ToString()
                                                                    });
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<form action="/Goles/AltaGolesJugador" method="post">
    <div class="form-group">
        Jugador: @Html.DropDownListFor(Model => Model.idJugador, jugadoresItems)
        @Html.ValidationMessageFor(Model => Model.idJugador)
    </div>
    <div class="form-group">
        Equipo: @Html.TextBoxFor(Model => Model.equipo)
        @Html.ValidationMessageFor(Model => Model.equipo)
    </div>
    <div class="form-group">
        Goles: @Html.TextBoxFor(Model => Model.cantidadGoles)
        @Html.ValidationMessageFor(Model => Model.cantidadGoles)
    </div>
    <input type="submit" class="btn btn-primary" value="Guardar">
    <a href="ListaGolesJugador" class="btn btn-primary">Cancelar</a>
</form>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
